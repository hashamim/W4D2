<form action="<%=cats_url%>" method="POST" >
    <label for="cat_name">Name:</label>
    <input type="text" id="cat_name" name="cat[name]"> <br>
    <label for="cat_sex">Sex:</label>
    M<input type="radio" id="cat_sex" name="cat[sex]" value="M"> 
    F<input type="radio" id="cat_sex" name="cat[sex]" value="F"><br>
    <label for="color">Color:</label>
    <select name="cat[color]" id="color">
        <option disabled selected >"--Select Color--"</option>
        <option value="brown">brown</option>
        <option value="black">black</option>
        <option value="white">white</option>
        <option value="orange">orange</option>
    </select><br>
    <label for="date">Birth Date:</label>
    <input type="date" name="cat[birth_date]" id="date">
    <br>
    <label for="cat_description">Description:</label><br>
    <textarea name="cat[description]" id="cat_description"></textarea>
    <br>
    <input type="submit" value="create cat">
</form>
